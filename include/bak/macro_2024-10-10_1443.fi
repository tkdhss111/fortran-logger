#define __LOG__(X)     call cf.logger.write ( __FILE__, __LINE__, X )
#define __FATAL__(X)   call logger.write ( __FILE__, __LINE__, '*** Fatal: ',   X )
#define __ERROR__(X)   call logger.write ( __FILE__, __LINE__, '*** Error: ',   X )
#define __WARNING__(X) call logger.write ( __FILE__, __LINE__, '*** Warning: ', X )
#define __DEBUG__(X)   call logger.write ( __FILE__, __LINE__, '*** Debug: ',   X )
#define __INFO__(X)    call logger.write ( __FILE__, __LINE__, '*** Info: ',    X )
#define __EXEC__(X)    call logger.exec  ( __FILE__, __LINE__, X )
